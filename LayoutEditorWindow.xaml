<Window x:Class="WindowManager.LayoutEditorWindow"
        x:Name="LayoutEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowManager"
        mc:Ignorable="d"
        Title="Layout Editor" 
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        Background="#66000000"
        AllowsTransparency="True"
        Loaded="Window_Loaded"
        KeyDown="Window_KeyDown">
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Toolbar -->
        <Border x:Name="ToolbarBorder"
                Background="#2D2D30" 
                Grid.Row="0"
                Height="60" 
                VerticalAlignment="Top"
                HorizontalAlignment="Stretch"
                CornerRadius="4"
                Margin="10">
            <StackPanel x:Name="ToolbarPanel" 
                        Orientation="Horizontal" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center">
                <Button x:Name="btnAddZone" 
                        Content="Add Zone" 
                        Width="100" 
                        Height="40" 
                        Margin="10,0"
                        Click="BtnAddZone_Click"
                        ToolTip="Add a new zone"/>
                <Button x:Name="btnSave" 
                        Content="Save" 
                        Width="100" 
                        Height="40" 
                        Margin="10,0"
                        Click="BtnSave_Click"
                        ToolTip="Save Layout"/>
                <Button x:Name="btnCancel" 
                        Content="Cancel" 
                        Width="100" 
                        Height="40" 
                        Margin="10,0"
                        Click="BtnCancel_Click"
                        ToolTip="Cancel"/>
            </StackPanel>
        </Border>
        
        <!-- Main Editor Area -->
        <Border x:Name="EditorBorder"
                Grid.Row="1" 
                Margin="10" 
                Background="#1E1E1E"
                CornerRadius="4">
            <Grid x:Name="EditorGrid" 
                  Background="Transparent"
                  MouseMove="EditorGrid_MouseMove"
                  MouseLeftButtonUp="EditorGrid_MouseLeftButtonUp">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="LeftColumn" Width="*"/>
                    <ColumnDefinition x:Name="SplitterColumn" Width="Auto"/>
                    <ColumnDefinition x:Name="RightColumn" Width="0"/>
                </Grid.ColumnDefinitions>
                
                <!-- Left Zone -->
                <Grid x:Name="LeftZone" Grid.Column="0" Background="#2D2D30">
                    <TextBlock x:Name="LeftZoneText"
                               Text="Zone 1 (Left)" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center" 
                               Foreground="White"
                               TextWrapping="Wrap"/>
                </Grid>
                
                <!-- Splitter -->
                <GridSplitter x:Name="VerticalSplitter" 
                             Grid.Column="1"
                             Width="4" 
                             Background="#3E3E42"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Stretch"
                             Panel.ZIndex="1"
                             PreviewMouseLeftButtonDown="Splitter_PreviewMouseLeftButtonDown"
                             PreviewMouseLeftButtonUp="EditorGrid_MouseLeftButtonUp"
                             Visibility="Collapsed"/>
                
                <!-- Right Zone -->
                <Grid x:Name="RightZone" Grid.Column="2" Background="#252526">
                    <TextBlock x:Name="RightZoneText"
                               Text="Zone 2 (Right)" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center" 
                               Foreground="White"
                               TextWrapping="Wrap"
                               Visibility="Collapsed"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
